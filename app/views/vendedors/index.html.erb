<%- model_class = Vendedor -%>
 <h4><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h4>
 
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vendedors.each do |vendedor| %>
      <tr>
        <td><%= link_to '<i class="icon-file"></i>'.html_safe, vendedor_path(vendedor) %></td>
        <td><%= vendedor.descricao %></td>
        <td><%=l vendedor.created_at %></td>
        <td>
          <%= link_to '<i class="icon-pencil"></i>'.html_safe,
                      edit_vendedor_path(vendedor), :class => 'btn btn-mini' %>
          <%= link_to '<i class="icon-remove"></i>'.html_safe,
                      vendedor_path(vendedor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vendedor_path,
            :class => 'btn btn-primary' %>
