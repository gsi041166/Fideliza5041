<%- model_class = Perfil -%>
<h4><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @perfils.each do |perfil| %>
      <tr>
        <td><%= link_to '<i class="icon-file"></i>'.html_safe, perfil_path(perfil) %></td>
        <td><%= perfil.descricao %></td> 
        <td>
          <%= link_to '<i class="icon-pencil"></i>'.html_safe,
                      edit_perfil_path(perfil), :class => 'btn btn-mini' %>
          <%= link_to '<i class="icon-remove"></i>'.html_safe,
                      perfil_path(perfil),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_perfil_path,
            :class => 'btn btn-primary' %>
