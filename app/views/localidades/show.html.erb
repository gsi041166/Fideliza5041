<%- model_class = Localidade -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cod_postal) %>:</strong></dt>
  <dd><%= @localidade.cod_postal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:localidade) %>:</strong></dt>
  <dd><%= @localidade.localidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cidade) %>:</strong></dt>
  <dd><%= @localidade.cidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pais_id) %>:</strong></dt>
  <dd><%= @localidade.pais_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              localidades_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_localidade_path(@localidade), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              localidade_path(@localidade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
