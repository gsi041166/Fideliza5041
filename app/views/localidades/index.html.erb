<%- model_class = Localidade -%>
 <h4><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h4>
 
<table class="table table-striped">
  <thead>
    <tr>
      <th><i class="icon-file"></i></th>   	
      <th><%= model_class.human_attribute_name(:cod_postal) %></th>
      <th><%= model_class.human_attribute_name(:localidade) %></th>
      <th><%= model_class.human_attribute_name(:cidade) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @localidades.each do |localidade| %>
      <tr>
        <td><%= link_to '<i class="icon-file"></i>'.html_safe, localidade_path(localidade) %></td>
        <td><%= localidade.cod_postal %></td>
        <td><%= localidade.localidade %></td>
        <td><%= localidade.cidade %></td>
        <td>
          <%= link_to '<i class="icon-pencil"></i>'.html_safe,
                      edit_localidade_path(localidade), :class => 'btn btn-mini' %>
          <%= link_to '<i class="icon-remove"></i>'.html_safe,
                      localidade_path(localidade),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
