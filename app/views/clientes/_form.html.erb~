<h1>PERFIL CLIENTE</h1>
 
<% Perfil.find(:all).each do |c| %>
        <%= check_box_tag 'cliente[perfil_ids][]', c.id, @cliente.perfils.include?(c) %><%= c.descricao %><br />
    <% end %>
</div>
  <div class="actions">
