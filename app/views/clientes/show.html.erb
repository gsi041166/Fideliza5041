<%- model_class = Cliente -%>
<ul class="breadcrumb">
	<li><strong><%= link_to model_class.model_name.human.pluralize.titleize, "/clientes"  %></strong>
	 <span class="divider">/</span></li>
	<li class="active"><%=t '.title', :default => [:'helpers.titles.show', 'Show %{model}'], :model => model_class.model_name.human.titleize %></li>
</ul>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cartao) %>:</strong></dt>
  <dd><%= @cliente.cartao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @cliente.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_nasc) %>:</strong></dt>
  <dd><%= @cliente.data_nasc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:obs) %>:</strong></dt>
  <dd><%= @cliente.obs %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rua) %>:</strong></dt>
  <dd><%= @cliente.rua %></dd>
  <dt><strong><%= model_class.human_attribute_name(:acumulado) %>:</strong></dt>
  <dd><%= @cliente.acumulado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activo) %>:</strong></dt>
  <dd><%= @cliente.activo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:profissao_id) %>:</strong></dt>
  <dd><%= @cliente.profissao.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grupocliente_id) %>:</strong></dt>
  <dd><%= @cliente.grupocliente.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:localidade_id) %>:</strong></dt>
  <dd><%= @cliente.localidade.localidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:loja_id) %>:</strong></dt>
  <dd><%= @cliente.loja.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vendedor_id) %>:</strong></dt>
  <dd><%= @cliente.vendedor.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sexo_id) %>:</strong></dt>
  <dd><%= @cliente.sexo.descricao %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clientes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cliente_path(@cliente), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cliente_path(@cliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
